	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Launch Program",
			"program": "${workspaceFolder}/index.js"
		},
		{
			"name": "name-of-challenge",
			"type": "node",
			"request": "launch",
			"program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
			"stopOnEntry": false,
			"args": [
				"src/{difficulty}/name-of-challenge/test/**/*.js",
				"--no-timeouts"
			],
			"cwd": "${workspaceRoot}",
			"runtimeExecutable": null,
			"env": {
				"NODE_ENV": "testing"
			}
		}
	]
}